{
  "name": "@bufbuild/cel-es-antlr4",
  "version": "0.0.1",
  "description": "An antlr4 based CEL language implementation",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/bufbuild/cel-es.git",
    "directory": "packages/cel-es-antlr4"
  },
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf ./dist/cjs/* ./dist/esm/* ./dist/types/*",
    "generate": "antlr4ts -visitor CEL.g4 -o src/gen",
    "build": "npm run build:cjs && npm run build:esm+types",
    "build:cjs": "tsc --project tsconfig.json --module commonjs --outDir ./dist/cjs && echo >./dist/cjs/package.json '{\"type\":\"commonjs\"}'",
    "build:esm+types": "tsc --project tsconfig.json --module ES2015 --outDir ./dist/esm --declaration --declarationDir ./dist/types && echo >./dist/esm/package.json '{\"type\":\"module\", \"sideEffects\":false}'",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "dependencies": {
    "@buf/alfus_cel.bufbuild_es": "^1.2.1-20230626203212-40a4ec79694c.1",
    "@bufbuild/cel-es": "^0.0.1",
    "@bufbuild/cel-es-conformance": "^0.0.1"
  },
  "main": "./dist/cjs/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "devDependencies": {
    "antlr4ts": "^0.5.0-alpha.4",
    "antlr4ts-cli": "^0.5.0-alpha.4"
  }
}
