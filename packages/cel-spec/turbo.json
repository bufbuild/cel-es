{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "fetch-proto": {
      "inputs": ["scripts/fetch-proto.js", "package.json"],
      "outputs": ["proto/**"],
      "dependsOn": [],
      "outputLogs": "new-only"
    },
    "fetch-enum-operator": {
      "inputs": ["scripts/enum/main.go", "scripts/go.*", "package.json"],
      "outputs": ["src/enum/operator.ts"],
      "env": ["GO*"],
      "outputLogs": "new-only"
    },
    "fetch-enum-overload": {
      "inputs": ["scripts/enum/main.go", "scripts/go.*", "package.json"],
      "outputs": ["src/enum/overload.ts"],
      "env": ["GO*"],
      "outputLogs": "new-only"
    },
    "fetch-testdata": {
      "inputs": ["scripts/fetch-testdata.js", "package.json"],
      "outputs": ["src/testdata/conformance.ts", "src/testdata/json/*.json"],
      "dependsOn": ["fetch-proto"],
      "outputLogs": "new-only"
    },
    "fetch-parsing": {
      "inputs": ["scripts/*.go", "scripts/go.*", "package.json"],
      "outputs": ["src/testdata/parsing.ts"],
      "dependsOn": ["fetch-testdata"],
      "env": ["GO*"],
      "outputLogs": "new-only"
    },
    "fetch-comprehensions": {
      "inputs": ["scripts/*.go", "scripts/go.*", "package.json"],
      "outputs": ["src/testdata/comprehensions.ts"],
      "env": ["GO*"],
      "outputLogs": "new-only"
    },
    "fetch-conformance": {
      "inputs": [
        "scripts/*.go",
        "scripts/go.*",
        "package.json",
        "src/testdata/json/*.json"
      ],
      "outputs": ["src/testdata/conformance.ts"],
      "env": ["GO*"],
      "outputLogs": "new-only"
    },
    "update-exports": {
      "dependsOn": [
        "generate",
        "fetch-enum-operator",
        "fetch-enum-overload",
        "fetch-parsing",
        "fetch-comprehensions",
        "fetch-conformance"
      ],
      "inputs": ["src/**", "scripts/**"],
      "outputs": ["package.json"],
      "outputLogs": "new-only"
    },
    "update-readme": {
      "dependsOn": [],
      "inputs": ["package.json", "scripts/**", "README.md"],
      "outputs": ["README.md"],
      "outputLogs": "new-only"
    },
    "generate": {
      "dependsOn": ["fetch-proto"],
      "inputs": ["proto/**", "buf.gen.yaml", "buf.lock", "buf.yaml"],
      "outputs": ["src/gen/**"],
      "outputLogs": "new-only"
    },
    "build": {
      "dependsOn": ["^build", "generate", "fetch-testdata", "update-exports"],
      "outputs": ["dist/**"],
      "outputLogs": "new-only"
    }
  }
}
