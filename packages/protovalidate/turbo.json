{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "fetch-proto": {
      "inputs": ["package.json"],
      "outputs": ["proto/**"],
      "dependsOn": []
    },
    "generate": {
      "dependsOn": ["fetch-proto"],
      "inputs": ["proto/**", "buf.gen.yaml"],
      "outputs": ["src/gen/**"]
    },
    "update-readme": {
      "dependsOn": [],
      "inputs": ["package.json", "scripts/**", "README.md"],
      "outputs": ["README.md"]
    }
  }
}
