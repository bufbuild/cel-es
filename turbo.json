{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "generate"],
      "outputs": ["dist/**"]
    },
    "generate": {
      "dependsOn": ["^build"],
      "outputs": ["src/gen/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "format": {},
    "attw": {
      "dependsOn": ["build"]
    },
    "//#format": {
      "inputs": ["$TURBO_DEFAULT$", "!packages/**", "package-lock.json"]
    }
  }
}
