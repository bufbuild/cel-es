{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "generate"],
      "outputs": ["dist/**"]
    },
    "generate": {
      "dependsOn": ["^build"],
      "inputs": [
        "proto",
        "buf.gen.yaml",
        "buf.yaml",
        "buf.lock",
        "package.json"
      ],
      "outputs": ["src/gen/**"]
    },
    "test": {
      "dependsOn": ["^build", "generate"],
      "cache": false
    },
    "format": {},
    "license-header": {},
    "lint": {
      "dependsOn": ["format", "^build", "generate"],
      "cache": false
    },
    "attw": {
      "dependsOn": ["build"]
    },
    "//#format": {
      "inputs": ["$TURBO_DEFAULT$", "!packages/**", "package-lock.json"]
    }
  }
}
